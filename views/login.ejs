<!DOCTYPE html>
<html lang="en">

<body>
    <%- include('layouts/header') -%>

        <!-- Navigation-->
        <%- include('layouts/navbar') -%>

            <!-- Page Header-->
            <main>
                <div class="form-container">
                    <div class="form-inner">
                        <div class="login-container">
                            <h2>Login</h2>
                            <% if (loginError) { %>
                                <p style="color: red;">
                                    <%= loginError %>
                                </p>
                                <% } %>
                                    <form action="/login" method="POST">
                                        <input type="text" name="username" class="input-box" placeholder="Username"
                                            required>
                                        <input type="password" name="password" class="input-box" placeholder="Password"
                                            required>
                                        <button type="submit" class="submit-btn">Login</button>
                                    </form>
                                    <button type="button" class="btn" onclick="openSignup()">Signup</button>
                        </div>
                        <div class="signup-container">
                            <h2>Signup</h2>
                            <% if (signupError) { %>
                                <p style="color: red;">
                                    <%= signupError %>
                                </p>
                                <% } %>
                                    <form action="/signup" method="POST">
                                        <input type="text" name="firstname" class="input-box" placeholder="First Name"
                                            required>
                                        <input type="text" name="lastname" class="input-box" placeholder="Last Name"
                                            required>
                                        <input type="text" name="username" class="input-box" placeholder="Username"
                                            required>
                                        <input type="text" name="mobile" class="input-box" placeholder="Mobile"
                                            required>
                                        <input type="password" name="password" class="input-box" placeholder="Password"
                                            required>
                                        <button type="submit" class="submit-btn">Signup</button>
                                    </form>
                                    <button type="button" class="btn" onclick="openLogin()">Already have an
                                        Account</button>
                        </div>
                    </div>
                </div>
            </main>

            <!-- Footer-->
            <%- include('layouts/footer') -%>

                <!-- Bootstrap core JS-->
                <%- include('layouts/scripts') -%>
</body>

</html>